{
	"type": "config",
	"id": "conf.system.email",
	"title": "Email settings",
	"queryinfo": {
		"xpath": "//system/email",
		"iterable": false
	},
	"properties": {
		"enable": {
			"type": "boolean",
			"default": false
		},
		"server": {
			"type": "string",
			"default": ""
		},
		"port":{
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"default": 25
		},
		"tls": {
			"type": "string",
			"enum": [
				"none",
				"ssl",
				"starttls",
				"auto"
			],
			"default": "none"
		},
		"sender": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string",
				"maxLength": 0
			}],
			"default": ""
		},
		"authentication": {
			"type": "object",
			"properties": {
				"enable": {
					"type": "boolean",
					"default": false
				},
				"username": {
					"type": "string",
					"default": ""
				},
				"password": {
					"type": "string",
					"default": ""
				}
			}
		},
		"primaryemail": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string",
				"maxLength": 0
			}],
			"default": ""
		},
		"secondaryemail": {
			"type": "string",
			"oneOf": [{
				"type": "string",
				"format": "email"
			},{
				"type": "string",
				"maxLength": 0
			}],
			"default": ""
		}
	}
}
